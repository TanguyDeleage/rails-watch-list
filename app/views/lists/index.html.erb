<div class="banner" style="background-image: url(https://images.unsplash.com/photo-1574267432553-4b4628081c31?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1778&q=80);">
  <div class="container">
      <h1>
        Have a seat </br> enjoy a nice movie
      </h1>
  </div>
</div>

<div class="container-button">
  <div class="button-create">
    <p> <%= link_to("Add a category of movies", new_list_path) %> </p>
  </div>
</div>

<div class="list-container">
  <div class="d-flex">
    <% @lists.each do |list| %>
      <div class="card-category">
        <% if list.photo.attached? %>
          <%= cl_image_tag(list.photo.key) %>
        <% else %>
          <img src="https://images.unsplash.com/photo-1505686994434-e3cc5abf1330?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1952&q=80" alt="">
        <% end %>
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>

