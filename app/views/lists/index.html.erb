<div class="banner">
  <div class="container">
    <h1>Take a look at your lists</h1>
  </div>
</div>

<div class="button-create">
  <%= link_to("Create a new list", new_list_path) %>
</div>

<div class="list-container">
  <div class="d-flex">
    <% @lists.each do |list| %>
      <div class="card-list">
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>
