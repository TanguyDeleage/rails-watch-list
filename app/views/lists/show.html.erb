 <div class="show-banner">
  <h2> <%= @list.name %> </h2>
 </div>

 <div class="button-delete-list">
  <%= link_to("Delete the list", list_path(@list), method: :delete, data: { confirm: "Are you sure ?" }) %>
</div>

<div class="show-container">
  <div class="add-movies">
    <p>Add a movie to your list :</p>
  </div>

  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="card">
      <img src="<%= bookmark.movie.poster_url %>" alt="" class="img-thumbnail">
      <div class="card-body">
        <%=  bookmark.movie.title %>
        <%=  bookmark.movie.overview %>
        <%=  bookmark.comment %>
        <%= link_to "❌", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure ?"} %>
      </div>
    </div>
    <% end %>
  </div>

  <div class="form-content">
    <%= simple_form_for [ @list, @bookmark] do |f| %>
      <%= f.association :movie%>
      <%= f.input :comment %>
      <%= f.submit "Submit bookmark", class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="show-buttons">
    <%= link_to("Back to the lists", lists_path) %>
  </div>
</div>
